root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[{*.html,*.htm,*.php,*.xml}]
indent_size = 2

[*.y{a,}ml]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[CNAME]
insert_final_newline = false

[{*lock.json,package.json}]
end_of_line = unset
indent_size = unset
indent_style = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
